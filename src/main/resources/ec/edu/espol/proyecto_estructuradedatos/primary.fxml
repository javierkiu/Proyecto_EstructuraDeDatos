<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.InnerShadow?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="479.0" prefWidth="642.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ec.edu.espol.proyecto_estructuradedatos.PrimaryController">
   <children>
      <Label text="Iniciar Sesión" textFill="#3c0000">
         <font>
            <Font name="System Bold" size="25.0" />
         </font>
         <effect>
            <InnerShadow />
         </effect>
      </Label>
      <HBox alignment="CENTER" prefHeight="31.0" prefWidth="343.0">
         <children>
            <Label text="¿Es tu primera vez?">
               <font>
                  <Font size="15.0" />
               </font></Label>
            <Label onMouseClicked="#registrar" text="Registrate">
               <font>
                  <Font name="System Bold Italic" size="15.0" />
               </font>
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </Label>
         </children>
         <VBox.margin>
            <Insets bottom="10.0" top="10.0" />
         </VBox.margin>
      </HBox>
      <Label text="Email o Usuario">
         <VBox.margin>
            <Insets bottom="10.0" top="10.0" />
         </VBox.margin>
         <font>
            <Font name="System Bold" size="15.0" />
         </font></Label>
      <TextField fx:id="emailLog" prefHeight="25.0" prefWidth="384.0" promptText="Email o Usuario" style="-fx-border-color: #3c0000;">
         <VBox.margin>
            <Insets bottom="20.0" left="200.0" right="200.0" />
         </VBox.margin>
      </TextField>
      <Label text="Contraseña">
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin>
         <font>
            <Font name="System Bold" size="15.0" />
         </font></Label>
      <TextField fx:id="passwordLog" prefHeight="25.0" prefWidth="177.0" promptText="Contrasena" style="-fx-border-color: #3c0000;">
         <VBox.margin>
            <Insets bottom="30.0" left="200.0" right="200.0" />
         </VBox.margin></TextField>
      <Button fx:id="iniSesBt" mnemonicParsing="false" onAction="#inicio" prefHeight="30.0" prefWidth="177.0" style="-fx-background-color: #3c0000;" text="Iniciar Sesion" textFill="WHITE">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Button>
   </children>
</VBox>
